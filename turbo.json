{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "*.node",
                "*.wasm",
                "index.js",
                "index.d.ts",
                "browser.js"
            ]
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "cache": false
        },
        "lint": {
            "cache": false
        },
        "format": {
            "cache": false
        },
        "//#format:toml": {
            "cache": false
        },
        "//#format:rs": {
            "cache": false
        },
        "//#format:fix": {
            "cache": false
        },
        "bench": {
            "dependsOn": [
                "build"
            ],
            "cache": false
        }
    }
}